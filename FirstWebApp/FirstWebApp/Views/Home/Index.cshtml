@model FirstWebApp.Models.InventoryModel;

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"/>
    <title></title>
</head>
<body>
    <nav class="navbar navbar-inverse" style="background-color:black;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" style="color:azure"><h1>Inventory Management</h1></a>
            </div>
           
        </div>
    </nav>
    <div class="container">
        <br />
        <br />
        <h4>Available Inventory</h4>
        <br />
        <div class="col-md-5">
            <table class="table table-hover">

                @foreach (var item in Model.ListOfProducts)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Type</td>
                </tr>
        }
            </table>
        </div>
        <div class="col-md-5">
            <a href="/Home/Add" class="btn btn-primary">Add</a>
            <a href="Home/Remove" class="btn btn-primary">Remove</a>
            <a href="/Home/Update" class="btn btn-primary">Update</a>
        </div>
    </div>
</body>
</html>